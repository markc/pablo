{
    "name": "markc/pablo",
    "description": "A Modern Micro Framework For PHP",
    "type": "project",
    "license": "AGPL-3.0",
    "autoload": {
        "psr-4": {
            "Markc\\Pablo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Markc\\Pablo\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Mark Constable",
            "email": "markc@renta.net"
        }
    ],
    "require": {
        "php": ">=8.4",
        "league/commonmark": "^2.4"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.68"
    }
}
