{
    "name": "markc/pablo",
    "description": "A Modern Micro Framework For PHP",
    "type": "project",
    "license": "AGPL-3.0",
    "autoload": {
        "psr-4": {
            "Markc\\Pablo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Markc\\Pablo\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Mark Constable",
            "email": "markc@renta.net"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "psr/container": "^2.0",
        "psr/http-message": "^2.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpstan analyse",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}